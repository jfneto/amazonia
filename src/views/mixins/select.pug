mixin select_route(name, options, label)
  div.input-group.mb-3
    div.input-group-prepend
      label(class="input-group-text" for='select_' + name)
        | #{label}
      select(class="custom-select" id='select_letter_' + name name= name + '-letter' required=true)
        option(disabled selected) selecione
        option(value="A") A
        option(value="B") B
        option(value="C") C
        option(value="D") D
        option(value="E") E
        option(value="F") F
        option(value="G") G
        option(value="H") H
      select(class="custom-select" id='select_number_' + name name=name + '-number' required=true)
        option(disabled selected) selecione
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
        option(value="6") 6
        option(value="7") 7
        option(value="8") 8